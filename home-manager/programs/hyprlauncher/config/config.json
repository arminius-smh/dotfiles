{
  "debug": {
    "disable_auto_focus": true,
    "enable_logging": false
  },
  "theme": {
    "colors": {
      "border": "#cba6f7",
      "item_bg": "#1e1e2e",
      "item_bg_hover": "#181825",
      "item_bg_selected": "#181825",
      "item_description": "#a6adc8",
      "item_description_selected": "#a0a0a0",
      "item_name": "#cdd6f4",
      "item_name_selected": "#ffffff",
      "item_path": "#6c7086",
      "item_path_selected": "#808080",
      "search_bg": "#181825",
      "search_bg_focused": "#181825",
      "search_caret": "#cba6f7",
      "search_text": "#cdd6f4",
      "window_bg": "#1e1e2e"
    },
    "corners": {
      "list_item": 8,
      "search": 8,
      "window": 12
    },
    "spacing": {
      "item_margin": 6,
      "item_padding": 4,
      "search_margin": 12,
      "search_padding": 12
    },
    "typography": {
      "item_description_size": 12,
      "item_name_size": 14,
      "item_path_font_family": "monospace",
      "item_path_size": 12,
      "search_font_size": 16
    }
  },
  "window": {
    "anchor": "center",
    "border_width": 1,
    "custom_navigate_keys": {
      "delete_word": "h",
      "down": "j",
      "up": "k"
    },
    "height": 600,
    "margin_bottom": 0,
    "margin_left": 0,
    "margin_right": 0,
    "margin_top": 0,
    "max_entries": 50,
    "show_border": true,
    "show_descriptions": true,
    "show_icons": true,
    "show_paths": false,
    "show_search": true,
    "use_gtk_colors": false,
    "width": 600
  }
}